[bandit]
exclude_dirs = ["archive", ".venv", "__pycache__", ".pytest_cache", ".mypy_cache", "build", "dist", ".eggs"]
skips = ["B101"]  # Skip assert_used test

# Test framework related
tests = ["B101"]

# Confidence levels: LOW, MEDIUM, HIGH
confidence = ["HIGH", "MEDIUM"]

# Severity levels: LOW, MEDIUM, HIGH
severity = ["MEDIUM", "HIGH"]

# Format output
format = "txt"

# Enable verbose output
verbose = true

# Aggregate output by vulnerability
aggregate = "vuln"

# Number of lines of code context to display
context_lines = 3

# Include test results in output
include_test_results = true

# Plugins to load
plugins = ["B201", "B301", "B302", "B303", "B304", "B305", "B306", "B307", "B308", "B309", "B310", "B311", "B312", "B313", "B314", "B315", "B316", "B317", "B318", "B319", "B320", "B321", "B322", "B323", "B324", "B325", "B501", "B502", "B503", "B504", "B505", "B506", "B507", "B601", "B602", "B603", "B604", "B605", "B606", "B607", "B608", "B609", "B610", "B611", "B701", "B702", "B703"]

# Blacklist calls
blacklist_calls = ["subprocess.call", "subprocess.run", "subprocess.Popen"]

# Blacklist imports
blacklist_imports = ["pickle", "cPickle", "subprocess"]

# Shell injection patterns
shell_injection = ["shell=True", "shell=1"]

# Hard-coded password patterns
hardcoded_password_patterns = ["password", "passwd", "pwd", "secret", "key", "token", "auth"]

# SQL injection patterns
sql_injection = ["execute", "executemany", "query", "raw"]

# Path traversal patterns
path_traversal = ["../", "..\\", "%2e%2e%2f", "%2e%2e%5c"]

# Command injection patterns
command_injection = ["os.system", "os.popen", "subprocess.call", "subprocess.run"]

# XML vulnerabilities
xml_vulnerabilities = ["xml.etree", "xml.sax", "xml.dom", "lxml"]

# Crypto vulnerabilities
crypto_vulnerabilities = ["md5", "sha1", "des", "3des", "rc4"]

# Network vulnerabilities
network_vulnerabilities = ["ssl", "tls", "urllib", "requests"]

# File system vulnerabilities
filesystem_vulnerabilities = ["pickle", "shelve", "tempfile"]

# Regular expression vulnerabilities
regex_vulnerabilities = ["re.compile", "re.search", "re.match"]

# Logging vulnerabilities
logging_vulnerabilities = ["logging", "print", "sys.stdout", "sys.stderr"]

# Random number vulnerabilities
random_vulnerabilities = ["random", "os.urandom"]

# Assert vulnerabilities
assert_vulnerabilities = ["assert"]

# Try-except vulnerabilities
try_except_vulnerabilities = ["except:", "except Exception:", "except BaseException:"]

# Import vulnerabilities
import_vulnerabilities = ["__import__", "importlib", "exec", "eval"]

# Flask vulnerabilities
flask_vulnerabilities = ["debug=True", "use_reloader=True", "use_debugger=True"]

# Django vulnerabilities
django_vulnerabilities = ["DEBUG=True", "ALLOWED_HOSTS=[]"]

# Jinja2 vulnerabilities
jinja2_vulnerabilities = ["autoescape=False", "Markup"]

# Mako vulnerabilities
mako_vulnerabilities = ["default_filters=[]", "disable_unicode=False"]

# Tornado vulnerabilities
tornado_vulnerabilities = ["debug=True", "autoreload=True"]

# Paramiko vulnerabilities
paramiko_vulnerabilities = ["AutoAddPolicy", "set_missing_host_key_policy"]

# Requests vulnerabilities
requests_vulnerabilities = ["verify=False", "cert=None"]

# YAML vulnerabilities
